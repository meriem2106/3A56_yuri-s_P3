{% extends 'FrontOffice/baseF.html.twig' %}

{% block title %}New Produit{% endblock %}

{% block body %}

   
    
    <div class="container-fluid d-flex flex-column" style="height: calc(100vh - 100px);">
        <div class="row flex-grow-1">
            <div class="col-md-6 px-0">
                <!-- Adjust image source as needed -->
                <img src="{{ asset('assets/img/artisanat.webp') }}" class="img-fluid h-100 w-100" alt="Image">
            </div>
            <div class="col-md-6">
                <div class="container mt-5"> 
                    <h1>Ajoutr un Produit</h1>
                    <div class="form-container text-center">
                     {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}

                       <div class="form-group">
                                {{ form_label(form.nom, 'nom') }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'style': form_errors(form.nom) ? 'border-color: #ad1328;' : ''}}) }}
                         <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.nom) }}</div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.categ, 'categ') }}
                                {{ form_widget(form.categ, {'attr': {'class': 'form-control', 'style': form_errors(form.categ) ? 'border-color: #ad1328;' : ''}}) }}
                         <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.categ) }}</div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.description, 'description') }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': form_errors(form.description) ? 'border-color: #ad1328;' : ''}}) }}
                         <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.description) }}</div>
                        </div>
                        <div class="form-group">
                                {{ form_label(form.origine, 'origine') }}
                                {{ form_widget(form.origine, {'attr': {'class': 'form-control', 'style': form_errors(form.origine) ? 'border-color: #ad1328;' : ''}}) }}
                         <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.origine) }}</div>
                        </div>
                       <div class="form-group">
                                {{ form_label(form.matiere, 'matiere') }}
                                {{ form_widget(form.matiere, {'attr': {'class': 'form-control', 'style': form_errors(form.matiere) ? 'border-color: #ad1328;' : ''}}) }}
                         <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.matiere) }}</div>
                        </div>
                          <div class="form-group">
                                {{ form_label(form.image, 'Image') }}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control', 'style': form_errors(form.image) ? 'border-color: #ad1328;' : ''}}) }}
                         <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.image) }}</div>
                        </div>
                        <div>
                                 {{ form_errors(form) }}
                                 <button type="submit" class="btn btn-primary">Submit</button>
                                 <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Back to List</a>
                                 {{ form_end(form) }}
                        </div>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}
