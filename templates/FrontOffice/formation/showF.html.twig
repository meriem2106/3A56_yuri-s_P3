{% extends 'FrontOffice/baseF.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="mt-4">Détails de la Formation</h1>

        <div class="card mt-4">
            <div class="card-body">
                <table class="table">
                    <tbody>
                      
                        <tr>
                            <th scope="row">Sujet</th>
                            <td>{{ formation.sujet }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Date</th>
                            <td>{{ formation.date ? formation.date|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Heure</th>
                            <td>{{ formation.heure ? formation.heure|date('H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Lieu</th>
                            <td>{{ formation.lieu }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

      <div class="mt-3">
            <a href="{{ path('app_formation_indexF') }}" class="btn btn-primary">Retour à la liste</a>
        </div>

    </div>
{% endblock %}
