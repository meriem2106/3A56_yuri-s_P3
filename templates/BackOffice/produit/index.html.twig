{% extends 'BackOffice/baseB.html.twig' %}

{% block title %}Mes Produits{% endblock %}

{% block body %}
    <style>
        /* Styles CSS */
        .table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .table th,
        .table td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #4E73DF;
            color: #FFFFFF;
        }

        .table img {
            max-width: 100px;
            max-height: 80px;
        }

        .no-records {
            text-align: center;
        }
        .actions .action-icons {
            display: flex; /* Aligner les icônes horizontalement */
            align-items: center; /* Centrer verticalement les icônes */
            }

        .actions .action-icons > * {
            margin-right: 10px; /* Espacement horizontal entre les icônes */
        }

        .search-container {
            margin-bottom: 20px;
        }

        .search-container input[type=text] {
            padding: 10px;
            margin-top: 8px;
            font-size: 17px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
    </style>

    <h1>Chercher un Produit</h1>
    <div class="input-group w-100 my-3">
        <input id="searchInput" type="text" class="form-control bg-light border-0 small" placeholder="Chercher ..."
               aria-label="Search" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-primary" type="button" onclick="searchTable()">
                <i class="fas fa-search fa-sm"></i>
            </button>
        </div>
    </div>

    <table class="table" id="produitTable">
        <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Origine</th>
            <th>Categ</th>
            <th>Matiere</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.origine }}</td>
                <td>{{ produit.categ }}</td>
                <td>{{ produit.matiere }}</td>
                <td>
                    {% if produit.image is not null %}
                        <img src="{{ asset('pictures/' ~ produit.image) }}" alt="{{ produit.nom }}">
                    {% else %}
                        No image
                    {% endif %}
                </td>
                <td class="actions">
                    <div class="action-icons">
                        <a href="#" onclick="window.location='{{ path('app_produit_show', {'id': produit.id}) }}'">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="#" onclick="window.location='{{ path('app_produit_edit', {'id': produit.id}) }}'">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                            <button class="btn" type="submit"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="row justify-content-between align-items-center mb-4">
        <button onclick="window.location='{{ path('app_produit_new') }}'" class="btn btn-primary" style="margin-right: 20px;">
            <i class="fas fa-plus"></i> Ajouter un Produit
        </button>
        <div class="pagination" style="display: flex; justify-content: center; align-items: center; margin-top: 20px;">
            {{ knp_pagination_render(produits) }}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const rows = document.querySelectorAll('tbody tr');

            searchInput.addEventListener('input', function() {
                const searchTerm = searchInput.value.trim().toLowerCase();

                rows.forEach(row => {
                    const rowData = row.innerText.toLowerCase();
                    if (rowData.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    </script>

   
{% endblock %}
