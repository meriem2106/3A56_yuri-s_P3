{% extends 'FrontOffice/baseF.html.twig' %}

{% block title %}Hotel index{% endblock %}

{% block body %}

{% include 'FrontOffice/nav.html.twig' %}
    <h1>Hotel index</h1>

    <div class="table-responsive"> <!-- Utilisation de la classe table-responsive pour permettre le défilement horizontal sur les petits écrans -->
        <table class="table table-striped table-bordered">
            <thead class="thead-dark"> <!-- Utilisation de la classe thead-dark pour une en-tête de tableau sombre -->
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Téléphone</th> <!-- Utilisation de l'orthographe correcte -->
                    <th>NbEtoiles</th>
                    <th>Localisation</th>
                    <th>Ville</th>
                    <th>Disponibilité</th>
                    <th>Description</th>
                    <th>Prix</th>
                    <th>Image</th>
                    <th>Actions</th> <!-- Utilisation de la casse Title Case pour la cohérence -->
                </tr>
            </thead>
            <tbody>
            {% for hotel in hotels %}
                <tr>
                    <td>{{ hotel.id }}</td>
                    <td>{{ hotel.nom }}</td>
                    <td>{{ hotel.email }}</td>
                    <td>{{ hotel.telephone }}</td>
                    <td>{{ hotel.nbEtoiles }}</td>
                    <td>{{ hotel.localisation }}</td>
                    <td>{{ hotel.ville }}</td>
                    <td>{{ hotel.disponibilite }}</td>
                    <td>{{ hotel.description }}</td>
                    <td>{{ hotel.prix }}</td>
                    <td>
                        {% if hotel.image is not null %}
                            <img src="{{ asset('pictures/' ~ hotel.image) }}" alt="{{ hotel.nom }}" width="100" height="80" class="img-fluid">
                        {% else %}
                            No image
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_hotel_show', {'id': hotel.id}) }}" class="btn btn-success btn-sm"><i class="bi bi-eye"></i></a> <!-- Utilisation de classes de bouton Bootstrap -->
                        <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}" class="btn btn-warning btn-sm"><i class="bi bi-pen"></i></a> <!-- Utilisation de classes de bouton Bootstrap -->
                        {# <a href="{{ path('app_hotel_delete', {'id': hotel.id}) }}" class="btn btn-danger btn-sm"><di>{{ include ('hotel/_delete_form.html.twig')}}<i class="bi bi-trash3"></i></div></a> #}
                        {{ include('hotel/_delete_form.html.twig')}}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12">No records found</td> <!-- Ajustement du colspan pour inclure toutes les colonnes -->
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_hotel_new') }}" class="btn btn-success">Create new</a> <!-- Utilisation de classes de bouton Bootstrap -->
{% endblock %}
