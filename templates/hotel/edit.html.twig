{% extends 'FrontOffice/baseF.html.twig' %}

{% block title %}Update Hotel{% endblock %}

{% block body %}
    <h1 class="row justify-content-center">Update Hotel</h1>

    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.nom, 'Nom') }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'style': form_errors(form.nom) ? 'border-color: #ad1328;' : '', 'placeholder': 'Nom'}}) }}
                            <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.nom) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.email, 'Email') }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': form_errors(form.email) ? 'border-color: #ad1328;' : '', 'placeholder': 'Email'}}) }}
                            <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.email) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.telephone, 'Numero de Telephone') }}
                            {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'style': form_errors(form.telephone) ? 'border-color: #ad1328;' : '', 'placeholder': 'Numero de Telephone'}}) }}
                            <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.telephone) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.nbEtoiles, 'Nombre d Etoiles') }}
                            {{ form_widget(form.nbEtoiles, {'attr': {'class': 'form-control', 'style': form_errors(form.nbEtoiles) ? 'border-color: #ad1328;' : '', 'placeholder': 'Nombre d etoiles'}}) }}
                            <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.nbEtoiles) }}</div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.localisation, 'Localisation') }}
                            {{ form_widget(form.localisation, {'attr': {'class': 'form-control', 'style': form_errors(form.localisation) ? 'border-color: #ad1328;' : '', 'placeholder': 'Localisation'}}) }}
                            <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.localisation) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.ville, 'Ville') }}
                            {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'style': form_errors(form.ville) ? 'border-color: #ad1328;' : '', 'placeholder': 'Ville'}}) }}
                            <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.ville) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.disponibilite, 'Disponibilité') }}
                            {{ form_widget(form.disponibilite, {'attr': {'class': 'form-control', 'style': form_errors(form.disponibilite) ? 'border-color: #ad1328;' : '', 'placeholder': 'Disponibilité'}}) }}
                            <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.disponibilite) }}</div>
                        </div>

                        <div class="form-group">
                            {{ form_label(form.prix, 'Prix') }}
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'style': form_errors(form.prix) ? 'border-color: #ad1328;' : '', 'placeholder': 'Prix'}}) }}
                            <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.prix) }}</div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': form_errors(form.description) ? 'border-color: #ad1328;' : '', 'placeholder': 'Description'}}) }}
                    <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.description) }}</div>
                </div>

                <div class="form-group">
                    {{ form_label(form.image, 'Image') }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    <div class="text" role="alert" style="color: #ad1328;">{{ form_errors(form.image) }}</div>
                </div>

                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Update') }}</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <a href="{{ path('app_hotel_index') }}">Back to list</a>
{% endblock %}
