<!DOCTYPE html>

<title>ReservationM index</title>

{% block body %}
    <h1>ReservationM index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbAdultes</th>
                <th>NbEnfants</th>
                <th>Arrangement</th>
                <th>Repartition</th>
                <th>Datearrivee</th>
                <th>Datedepart</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation_m in reservation_ms %}
            <tr>
                <td>{{ reservation_m.id }}</td>
                <td>{{ reservation_m.nbAdultes }}</td>
                <td>{{ reservation_m.nbEnfants }}</td>
                <td>{{ reservation_m.arrangement }}</td>
                <td>{{ reservation_m.repartition }}</td>
                <td>{{ reservation_m.datearrivee ? reservation_m.datearrivee|date('Y-m-d') : '' }}</td>
                <td>{{ reservation_m.datedepart ? reservation_m.datedepart|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_reservation_m_show', {'id': reservation_m.id}) }}">show</a>
                    <a href="{{ path('app_reservation_m_edit', {'id': reservation_m.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_m_new') }}">Create new</a>
{% endblock %}
