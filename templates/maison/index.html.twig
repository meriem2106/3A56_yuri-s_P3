{% extends 'base.html.twig' %}

{% block title %}Maison index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1>Maison index</h1>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>NbChambres</th>
                        <th>Capacite</th>
                        <th>Localisation</th>
                        <th>Ville</th>
                        <th>Disponibilite</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Prix</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for maison in maisons %}
                    <tr>
                        <td>{{ maison.id }}</td>
                        <td>{{ maison.nom }}</td>
                        <td>{{ maison.email }}</td>
                        <td>{{ maison.nbChambres }}</td>
                        <td>{{ maison.capacite }}</td>
                        <td>{{ maison.localisation }}</td>
                        <td>{{ maison.ville }}</td>
                        <td>{{ maison.disponibilite }}</td>
                        <td>{{ maison.description }}</td>
                        <td>
                            {% if maison.image is not null %}
                                <img src="{{ asset('pictures/' ~ maison.image) }}" alt="{{ maison.nom }}" width="100" height="80">
                            {% else %}
                                No image
                            {% endif %}
                        </td>
                        <td>{{ maison.prix }}</td>
                        <td>
                            <a href="{{ path('app_maison_show', {'id': maison.id}) }}" class="btn btn-success btn-sm"><i class="bi bi-eye"></i></a>
                            <a href="{{ path('app_maison_edit', {'id': maison.id}) }}" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i></a>
                            {# <a href="{{ path('app_maison_delete', {'id': maison.id}) }}" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a> #}
                            {{ include('maison/_delete_form.html.twig')}}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="12">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="{{ path('app_maison_new') }}" class="btn btn-success">Create new</a>
    </div>
{% endblock %}
