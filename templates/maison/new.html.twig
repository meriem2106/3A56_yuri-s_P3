{% extends 'base.html.twig' %}

{% block title %}New Maison{% endblock %}

{% block body %}
    <h1 class="row justify-content-center">Create new Maison</h1>

    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.nom, 'Nom') }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'style': form_errors(form.nom) ? 'border-color: #ad1328;' : '', 'placeholder': 'Veuillez entrer le nom de votre maison d\'hote'}}) }}
                            <div class="text" style="color: #ad1328;" role="alert">{{ form_errors(form.nom) }}</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.email, 'Email') }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': form_errors(form.email) ? 'border-color: #ad1328;' : '', 'placeholder': 'Veuillez entrer l\'email de votre maison d\'hote'}}) }}
                            <div class="text" style="color: #ad1328;" role="alert">{{ form_errors(form.email) }}</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.nbChambres, 'Nombre de chambres') }}
                            {{ form_widget(form.nbChambres, {'attr': {'class': 'form-control', 'style': form_errors(form.nbChambres) ? 'border-color: #ad1328;' : '', 'placeholder': 'Veuillez entrer le nombre de chambres de votre maison d\'hote'}}) }}
                            <div class="text" style="color: #ad1328;" role="alert">{{ form_errors(form.nbChambres) }}</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.capacite, 'Capacité') }}
                            {{ form_widget(form.capacite, {'attr': {'class': 'form-control', 'style': form_errors(form.capacite) ? 'border-color: #ad1328;' : '', 'placeholder': 'Veuillez entrer la capacité de votre maison d\'hote'}}) }}
                            <div class="text" style="color: #ad1328;" role="alert">{{ form_errors(form.capacite) }}</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.localisation, 'Localisation') }}
                            {{ form_widget(form.localisation, {'attr': {'class': 'form-control', 'style': form_errors(form.localisation) ? 'border-color: #ad1328;' : '', 'placeholder': 'Veuillez entrer la localisation de votre maison d\'hote'}}) }}
                            <div class="text" style="color: #ad1328;" role="alert">{{ form_errors(form.localisation) }}</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.ville, 'Ville') }}
                            {{ form_widget(form.ville, {'attr': {'class': 'form-control', 'style': form_errors(form.ville) ? 'border-color: #ad1328;' : '', 'placeholder': 'Veuillez entrer la ville de votre maison d\'hote'}}) }}
                            <div class="text" style="color: #ad1328;" role="alert">{{ form_errors(form.ville) }}</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.disponibilite, 'Disponibilité') }}
                            {{ form_widget(form.disponibilite, {'attr': {'class': 'form-control', 'style': form_errors(form.disponibilite) ? 'border-color: #ad1328;' : '', 'placeholder': 'Veuillez entrer la disponibilité de votre maison d\'hote'}}) }}
                            <div class="text" style="color: #ad1328;" role="alert">{{ form_errors(form.disponibilite) }}</div>
                        </div>
                    </div>
                    <div class="col-md-6">
                    {{ form_label(form.prix, 'Prix') }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'style': form_errors(form.prix) ? 'border-color: #ad1328;' : '', 'placeholder': 'Veuillez entrer le prix de la nuitée de votre maison d\'hote'}}) }}
                    <div class="text" style="color: #ad1328;" role="alert">{{ form_errors(form.prix) }}</div>
                </div>
                </div>
                <div class="form-group">
                            {{ form_label(form.image, 'Image') }}
                            {{ form_widget(form.image, {'attr': {'class': 'form-control', 'style': form_errors(form.image) ? 'border-color: #ad1328;' : ''}}) }}
                            <div class="text" style="color: #ad1328;" role="alert">{{ form_errors(form.image) }}</div>
                        </div>
                <div class="form-group">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'style': form_errors(form.description) ? 'border-color: #ad1328;' : '', 'placeholder': 'Veuillez entrer la description de votre maison d\'hote'}}) }}
                    <div class="text" style="color: #ad1328;" role="alert">{{ form_errors(form.description) }}</div>
                </div>
                

                <button type="submit" class="btn btn-primary">{{ button_label|default('submit') }}</button> 
                  
                {{ form_end(form) }} 
            </div>
        </div>
    </div>

    <a href="{{ path('app_maison_index') }}">Back to list</a> 
{% endblock %}
