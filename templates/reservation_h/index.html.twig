<!DOCTYPE html>

<title>ReservationH index</title>

{% block body %}
    <h1>ReservationH index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbAdultes</th>
                <th>NbEnfants</th>
                <th>Arrangement</th>
                <th>Repartition</th>
                <th>Datedepart</th>
                <th>Datearrivee</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation_h in reservation_hs %}
            <tr>
                <td>{{ reservation_h.id }}</td>
                <td>{{ reservation_h.nbAdultes }}</td>
                <td>{{ reservation_h.nbEnfants }}</td>
                <td>{{ reservation_h.arrangement }}</td>
                <td>{{ reservation_h.repartition }}</td>
                <td>{{ reservation_h.datedepart ? reservation_h.datedepart|date('Y-m-d') : '' }}</td>
                <td>{{ reservation_h.datearrivee ? reservation_h.datearrivee|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_reservation_h_show', {'id': reservation_h.id}) }}">show</a>
                    <a href="{{ path('app_reservation_h_edit', {'id': reservation_h.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_h_new') }}">Create new</a>
{% endblock %}
